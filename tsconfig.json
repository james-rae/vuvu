{
    "compilerOptions": {
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es6", "es2016", "es2015.promise", "es2017.object", "esnext.asynciterable"],
        "outDir": "./dist/",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "removeComments": false,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules"]
}
